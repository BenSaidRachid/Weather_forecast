<?xml version="1.0" encoding="utf-8"?>
<menu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:showIn="navigation_view">

    <group
        android:id="@+id/homeGroup"
        android:checkableBehavior="single"
        >
        <item
            android:id="@+id/home"
            android:icon="@drawable/ic_home"
            android:title="Home"
            />
    </group>
    <group
        android:id="@+id/locationGroup"
        android:checkableBehavior="single">
        <item
            android:id="@+id/location"
            android:icon="@drawable/ic_location"
            android:title="Manage location" />
    </group>
    <group
        android:id="@+id/temperatureGroup"
        android:checkableBehavior="single">
        <item
            android:id="@+id/temperature"
            android:icon="@drawable/ic_sun"
            android:title="Temperature"
            android:enabled="false"
            app:actionLayout="@layout/layout_switch_temperature"
            />
    </group>

    <group
        android:id="@+id/lockGroup"
        android:checkableBehavior="single">
        <item
            android:id="@+id/lock"
            android:icon="@android:drawable/ic_lock_idle_lock"
            android:title="Lock screen"
            android:enabled="false"
            app:actionLayout="@layout/lock_switch"
            />
    </group>

    <group
        android:id="@+id/notificationGroup"
        android:checkableBehavior="single">
        <item
            android:id="@+id/notification"
            android:icon="@drawable/ic_alert"
            android:title="Notification"
            android:enabled="false"
            app:actionLayout="@layout/notif_switch"
            />
    </group>

    <group
        android:id="@+id/statusGroup"
        android:checkableBehavior="single">
        <item
            android:id="@+id/status"
            android:icon="@drawable/ic_status"
            android:title="Status bar"
            android:enabled="false"
            app:actionLayout="@layout/status_switch"
            />
    </group>

    <group
        android:id="@+id/backgroundGroup"
        android:checkableBehavior="none">
        <item
            android:id="@+id/background"
            android:icon="@drawable/ic_image"
            android:title="Hide background image"
            android:enabled="false"
            app:actionLayout="@layout/background_switch"
            />
    </group>

    <group
        android:id="@+id/weatherGroup"
        android:checkableBehavior="single">
        <item
            android:id="@+id/weather"
            android:icon="@drawable/ic_weather"
            android:title="Daily weather news"
            android:enabled="false"
            app:actionLayout="@layout/daily_switch"
            />
    </group>

    <group
        android:id="@+id/widgetGroup"
        android:checkableBehavior="single">
        <item
            android:id="@+id/widget"
            android:icon="@drawable/ic_widget"
            android:title="Weather widgets" />
    </group>

    <group
        android:id="@+id/unitGroup"
        android:checkableBehavior="single">
        <item
            android:id="@+id/unit"
            android:icon="@drawable/ic_sun"
            android:title="Unit setting" />
    </group>

    <group
        android:id="@+id/shareGroup"
        android:checkableBehavior="single">
        <item
            android:id="@+id/share"
            android:icon="@drawable/ic_share"
            android:title="Share" />
    </group>

</menu>
